@using WEBTask.Models.DTO
@model IEnumerable<TaskDto>

@{
    ViewData["Title"] = "Tasks";
}

<h1>Tasks</h1>
<a class="nav-link text-dark" asp-area="" asp-controller="Task" asp-action="Create">Create Task</a>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Due Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Status</td>
                <td>@task.Priority</td>
                <td>@task.DueDate?.ToShortDateString()</td>
                <td>
                    <a asp-action="Update" asp-route-id="@task.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@task.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
